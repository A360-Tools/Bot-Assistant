{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["chrome"]
  },
  "include": [
    "entrypoints/**/*",
    "components/**/*",
    "types/**/*",
    "wxt.config.ts",
    "wxt-env.d.ts",
    ".wxt/types/**/*"
  ],
  "exclude": ["node_modules"]
}